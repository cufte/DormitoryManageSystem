<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="总管理员"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buildingBuild"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_function_button"
        android:drawableLeft="@drawable/ic_student_in"
        android:drawableRight="@drawable/ic_enter"
        android:drawablePadding="17dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:stateListAnimator="@null"
        android:text="宿舍楼修建"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buildingAbandon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_function_button"
        android:drawableLeft="@drawable/ic_student_out"
        android:drawableRight="@drawable/ic_enter"
        android:drawablePadding="17dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:stateListAnimator="@null"
        android:text="宿舍楼废弃"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buildingBuild" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_navigation_bar_button"
            android:backgroundTint="@color/colorWhite"
            android:clickable="false"
            android:drawableTop="@drawable/ic_home_selected"
            android:gravity="center"
            android:paddingTop="7dp"
            android:stateListAnimator="@null"
            android:text="首页" />

        <Button
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_navigation_bar_button"
            android:backgroundTint="@color/colorWhite"
            android:drawableTop="@drawable/ic_user_unselected"
            android:onClick="navigationMy"
            android:paddingTop="7dp"
            android:stateListAnimator="@null"
            android:text="我" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>